#include "../lib/ShaderAPI.h"

#include "../lib/Color.h"

shader apColorConstruct
[[
    string help = "Simple color pass-through operation",
]]
(
    COLOR_SPLIT_PARAM_INPUTS(),

    COLOR_PARAM_OUTPUTS()
)
{
    if (!useSplitInputs)
    {
        resultRGBA.RGB = inputRGB;
    }
    else 
    {
        resultRGBA.RGB[0] = inputR;
        resultRGBA.RGB[1] = inputG;
        resultRGBA.RGB[2] = inputB;
    }
    resultRGBA.A = inputA;

    COLOR_PARAM_OUTPUTS_SET();
} 