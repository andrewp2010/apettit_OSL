#include "../lib/ShaderAPI.h"

shader apFloatMix
[[
    string help = "Mix between Input A and Input B given a float Mix Value"
]]
(
    float inputA = 0.0
    [[ string label = "Input A" ]],
    float inputB = 1.0
    [[ string label = "Input B" ]],
    float mixValue = 0.5
    [[ string label = "Mix Value" ]],

    output float resultF = 0.0
)

{
    resultF = mix(inputA, inputB, mixValue);
}